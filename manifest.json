{
  "description": "Adds a page action to unfix the header on imgur albums.",
  "manifest_version": 2,
  "name": "modify-imgur-album",
  "version": "1.0",

  "permissions": ["activeTab", "tabs", "webRequest"],

  "background": {
    "scripts": ["hide-post-header.js"]
  },

  "page_action": {
    "default_icon": "icons/off.svg",
    "browser_style": true
  }

}
