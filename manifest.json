{
  "description": "Provides some simple quality-of-life enhancements to imgur.",
  "manifest_version": 2,
  "name": "imgur QOL",
  "version": "1.0",

  "applications": {
    "gecko": {
      "id": "lrkissling+imgur-qol@gmail.com",
      "strict_min_version": "53.0"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "*://imgur.com/a/*",
        "*://imgur.com/gallery/*",
        "*://www.imgur.com/a/*",
        "*://www.imgur.com/gallery/*"
      ],
      "js": ["load-all-images.js"]
    }
  ],

  "options_ui": {
    "page": "options/options.html"
  },

  "permissions": ["*://imgur.com/*", "storage", "tabs", "webRequest"],

  "background": {
    "scripts": ["background.js"]
  }

}
